          <% else %>
            <li><a class="black-text" href="/users/sign_in">LOGIN</a></li>
          <% end %>
        </div>
      </ul>
    </div>
    </nav>

    <main>
    <div class="container">
      <%= yield %>
    </div>
    </main>

